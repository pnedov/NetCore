<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoviesBox</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar bg-light">
        <a class="navbar" asp-controller="Home" asp-action="Index">Home</a>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - MoviesBox</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/site.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#form1").submit(function () {
                window.localStorage['searchParam_val'] = $("input[name = 'searchParam']").val();
            });
            $(window).load(function () {
                $("input[name = 'searchParam']").val(window.localStorage['searchParam_val']);
                window.localStorage['searchParam_val'] = '';
            });
        });
    </script>
</body>
</html>
